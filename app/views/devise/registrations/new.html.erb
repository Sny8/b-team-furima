<h2>ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %><p>必須</p><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><p>必須</p><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><p>必須</p><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><p>必須</p><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <h3>本人確認情報登録</h3>

  <div class="field">
    <%= f.label :お名前（性） %><p>必須</p><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  </div>

  <div class="field">
    <%= f.label :お名前（名） %><p>必須</p><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :お名前カナ（性） %><p>必須</p><br />
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :お名前カナ（名） %><p>必須</p><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :生年月日 %><p>必須</p><br />
    <%= f.date_select :birth_date, use_month_numbers: true, start_year: 1900, end_year: (Time.now.year), default: Date.new(2020, 1, 1) %>
  </div>

  <div class="actions">
    <%= f.submit "次へ進む" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
