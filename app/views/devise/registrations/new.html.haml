%h2 ユーザー登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  
  .field
    = f.label :ニックネーム
    %p 必須
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname"

  .field
    = f.label :メールアドレス
    %p 必須
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"

  .field
    = f.label :パスワード
    %p 必須
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上"

  .field
    = f.label :パスワード確認
    %p 必須
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"

  %h3 本人確認情報登録
  .field
    = f.label :お名前（性）
    %p 必須
    %br/
    = f.text_field :family_name, autofocus: true, autocomplete: "family_name"

  .field
    = f.label :お名前（名）
    %p 必須
    %br/
    = f.text_field :first_name, autofocus: true, autocomplete: "first_name"

  .field
    = f.label :お名前カナ（性）
    %p 必須
    %br/
    = f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana"

  .field
    = f.label :お名前カナ（名）
    %p 必須
    %br/
    = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana"

  .field
    = f.label :生年月日
    %p 必須
    %br/
    = f.date_select :birth_date, use_month_numbers: true, start_year: 1900, end_year: (Time.now.year), default: Date.new(2020, 1, 1)

  .actions
    = f.submit "次へ進む"

= render "devise/shared/links"
