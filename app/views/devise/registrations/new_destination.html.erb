<h2>お届け先情報登録</h2>

<%= form_for @destination do |f| %>
  <%= render "devise/shared/error_messages", resource: @destination %>

  <div class="field">
    <%= f.label :お名前（性） %><p>必須</p><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  </div>

  <div class="field">
    <%= f.label :お名前（名） %><p>必須</p><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :お名前カナ（性） %><p>必須</p><br />
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :お名前カナ（名） %><p>必須</p><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><p>必須</p><br />
    <%= f.text_field :post_code %>
  </div>

  <div class="field">
    <%= f.label :都道府県 %><p>必須</p><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :市区町村 %><p>必須</p><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :番地 %><p>必須</p><br />
    <%= f.text_field :block %>
  </div>

  <div class="field">
    <%= f.label :建物名 %><br />
    <%= f.text_field :building %>
  </div>

  <div class="field">
    <%= f.label :電話 %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>